generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model Product {
  id        String   @id @default(cuid())
  name      String
  sku       String   @unique
  price     Decimal
  stock     Int
  category  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
